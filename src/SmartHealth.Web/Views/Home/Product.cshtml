                    </div>
                </div>
            </div>
            <!--End .thongtincanbiet-->
        </div>
        <!--chitietsanpham-->
        <div class="tukhoa">
            <span>Từ khóa:</span>
            @if (!string.IsNullOrEmpty(productDetail.Tags))
            {
                foreach (var tag in productDetail.Tags.Split(','))
                {
                <a href="@Url.Action("ProductList", "Home", new { search = tag })">@tag</a>
                }
            }
        </div>
    </div>
</div>
