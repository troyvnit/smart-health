@using SmartHealth.Box.Domain.Dtos
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var products = (List<ProductDto>)ViewBag.Products;
}

<div class="prohome">
    <div class="Tprohone">
        <h3>
            <p>@ViewBag.GroupName</p>
        </h3>
    </div>
    <div class="Cprohone">
        @foreach (var product in products)
        {
            <div class="boxPro">
                <ul>
                    <li class="pic">
                        <table cellspacing="0" cellpadding="0" width="100%">
                            <tbody>
                                <tr>
                                    <td class="pic_1">
                                        <a href="@Url.Action("Product", "Home", new { id = product.Id })">
                                            <img src="@product.MediaUrl" alt=""/></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </li>
                    <li class="tit"><a href="@Url.Action("Product", "Home", new { id = product.Id })">@product.Name</a></li>
                </ul>
            </div>
        }
    </div>
</div>

