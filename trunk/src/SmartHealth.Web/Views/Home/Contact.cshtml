            </div>
            <div class="map">
                <div style="padding:10px;width:50%; float:left;">
                    <h4>Sales Office:</h4>
                    <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=27%2F13+Hau+Giang,+4,+Tan+Binh+District,+Ho+Chi+Minh+City,+Vietnam&amp;aq=&amp;sll=10.807899,106.662859&amp;sspn=0.006355,0.010568&amp;ie=UTF8&amp;hq=&amp;hnear=27+Hau+Giang,+4,+Tan+Binh+District,+Ho+Chi+Minh+City,+Vietnam&amp;t=m&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe>
                </div>
                <div style="padding:10px;width:50%; float:left;">
                    <h4>Hanoi Office:</h4>
                    <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=TALICO+Building,+22+Ho+Giam&amp;aq=&amp;sll=10.808131,106.6617&amp;sspn=0.006355,0.010568&amp;ie=UTF8&amp;hq=TALICO+Building,+22+Ho+Giam&amp;hnear=&amp;radius=15000&amp;t=m&amp;z=13&amp;output=embed"></iframe>
                </div>
            </div>
			
        </div>
    </div>
</div>
</div>


    <script src="@Url.Content("~/Areas/Administrator/ClipOne/plugins/jquery-validation/dist/jquery.validate.min.js")"></script>
<script type="text/javascript">
    function submitContactForm() {
        if ($('form').valid()) {
            $('#submitBtn').hide();
            $('#submitProgress').show();
            $.ajax({
                success: function () {
                    updateProgress(100);
                },
                type: 'POST',
                url: $('form').attr('action'),
                async: true,
                data: $('form').serialize()
            });
        }
    }
    function updateProgress(percentage) {
        if (percentage > 100) percentage = 100;
        $('.progress-bar').css('width', percentage + '%');
        $('.progress-bar').html(percentage + '% Hoàn tất');
        if (percentage == 100) {
            $('form')[0].reset();
            $('#submitProgress').delay(3000).hide(0);
            $('#submitBtn').delay(3000).show(0);
        }
    }

    $(document).ready(function () {
        $('form').validate({
            rules: {
                Name: {
                    minlength: 3,
                    required: true
                },
                Email: {
                    minlength: 3,
                    required: true,
                    email: true
                },
                Message: {
                    minlength: 3,
                    maxlength: 300,
                    required: true
                }
            },
            highlight: function(element) {
                $(element).closest('.form-group').addClass('has-error');
                $(element).closest('.form-group').removeClass('has-success');
            },
            unhighlight: function(element) {
                $(element).closest('.form-group').removeClass('has-error');
                $(element).closest('.form-group').addClass('has-success');
            },
            errorElement: 'span',
            errorClass: 'help-block',
            errorPlacement: function(error, element) {
                if(element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });
    });
</script>