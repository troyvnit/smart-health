                                            <li class="icon icontop">
                                                <span class="contacticos ico1"></span>
                                                <span class="text">04-3724 6609</span>
                                            </li>                                         
                                        </ul> 
 
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 row-col">
                                <div class="box">
                                    <div class="form-group">
                                        <input class="name form-control" type="text" placeholder="@SH.Name" name="Name" />
                                    </div>
                                    <div class="form-group">
                                        <input class="mail form-control" type="text" placeholder="@SH.Email" name="Email" />
                                    </div>
                                    <div class="form-group">
                                        <input class="phone form-control" type="text" placeholder="@SH.Phone" name="Phone" />
                                    </div>
                                    <div class="box form-group">
                                        <textarea placeholder="@SH.MessagePlaceHolder" class="form-control" name="Message"></textarea>
                                    </div>
                                </div>
                                <div id="submitAlert" class="alert alert-success" role="alert" style="display: none; margin-top: 20px;">@SH.Complete</div>
                            </div>
                        </div>
                        <div class="row submit">
                            <div class="col-md-3 right">
                                <button id="submitBtn" style="float: right" type="button" class="btn btn-success" onclick="submitContactForm();">@SH.Send</button>
                                <div id="submitProgress" class="progress progress-striped active" style="display: none">
                                    <div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
