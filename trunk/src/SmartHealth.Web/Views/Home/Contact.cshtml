                <h3><p>@SH.Contact</p></h3>
            </div>
        <div id="contact">
            <div class="container" style="width: 940px">
                <div class="row contact">
                    <p>@SH.ContactMessage</p>
                    <form action="@Url.Action("SendContactMessage", "Home")" method="POST">
                        <div class="row form">
